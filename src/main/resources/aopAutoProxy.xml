<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
           ">

    <!-- advice -->
    <bean id="greetingAdvice" class="com.example.aop.proxy.GreetingAdvice"/>
    <!-- target -->
    <bean id="halo" class="com.example.aop.proxy.Halo"/>

    <!--  配置切点pointcut和通知advice -->
    <bean id="greetingAdvisor" class="org.springframework.aop.support.RegexpMethodPointcutAdvisor">
        <property name="advice" ref="greetingAdvice"></property>
        <property name="pattern" value=".*greeting"/>
    </bean>

    <!-- 自动代理配置 -->
    <bean class="org.springframework.aop.framework.autoproxy.DefaultAdvisorAutoProxyCreator"/>


</beans>